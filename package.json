{
  "name": "@cto.af/string-width",
  "version": "4.0.0",
  "description": "Get width of a Unicode string in fixed-width display cells, accounting for combining characters, emojis, flags, Hangul, East Asian Width, default ignorables, and a few more.",
  "main": "lib/index.js",
  "type": "module",
  "types": "types/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cto-af/string-width.git"
  },
  "scripts": {
    "clean": "rm -rf coverage docs types lib/widths.js",
    "docs": "typedoc",
    "lint": "eslint .",
    "trie": "node tools/genWidthTrie.js",
    "test": "c8 mocha",
    "types": "tsc",
    "build": "npm run trie && npm run types && npm run lint && npm run test && npm run docs && npm pack --dry-run"
  },
  "keywords": [
    "unicocde",
    "string",
    "width",
    "string-width",
    "stringwidth"
  ],
  "author": "Joe Hildebrand <joe-github@cursive.net>",
  "license": "MIT",
  "dependencies": {
    "@cto.af/unicode-trie-runtime": "3.2.2",
    "ansi-regex": "6.1.0",
    "emoji-regex": "10.4.0"
  },
  "devDependencies": {
    "@cto.af/eslint-config": "6.0.4",
    "@cto.af/unicode-trie": "3.2.2",
    "@types/node": "22.15.24",
    "c8": "10.1.3",
    "eslint": "9.27.0",
    "eslint-plugin-mocha": "11.1.0",
    "mocha": "11.5.0",
    "typedoc": "0.28.5",
    "typescript": "5.8.3"
  },
  "packageManager": "pnpm@10.11.0",
  "engines": {
    "node": ">= 20"
  }
}
